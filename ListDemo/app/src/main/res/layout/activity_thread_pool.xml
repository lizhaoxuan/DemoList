<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:padding="10dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:gravity="center"
            android:text="【SingleThreadExecutor】   单线程执行器 .每次只执行一个线程"/>
        <Button
            android:id="@+id/startBtn1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="进入"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:gravity="center"
            android:text="【FixedThreadPool】   固定线程数执行 3个"/>
        <Button
            android:id="@+id/startBtn2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="进入"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:gravity="center"
            android:text="【CachedThreadPool】   不限制线程池大小 执行"/>
        <Button
            android:id="@+id/startBtn3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="进入"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:gravity="center"
            android:text="【*自定义线程池】   不限制线程池大小 执行"/>
        <Button
            android:id="@+id/startBtn4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="进入"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:gravity="center"
            android:text="【*可控线程】   创建、开始、取消、重新开始、释放资源"/>
        <Button
            android:id="@+id/startBtn5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="进入"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black"/>
    </LinearLayout>




</ScrollView>

